generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ALUMNO
  ORGANIZADOR
  SOCIOFORMADOR
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  passwordHash  String
  name          String
  matricula     String?
  role          Role     @default(ALUMNO)
  
  fairRegistration FairRegistration?
  enrollments      Enrollment[]
  
  projectsManaged  Project[] // For SOCIOFORMADOR (projects they own)
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  period      String   // e.g., "FEB-JUN 2024"
  capacity    Int
  enrolled    Int      @default(0)
  secretCode  String   // The validation code
  
  ownerId     Int?
  owner       User?    @relation(fields: [ownerId], references: [id])
  
  enrollments Enrollment[]
}

model FairRegistration {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])
  timeSlot  String   // "09:00", "10:00", etc.
  createdAt DateTime @default(now())
}

model Enrollment {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  projectId Int
  project   Project  @relation(fields: [projectId], references: [id])
  period    String
  folio     String   @unique @default(uuid())
  createdAt DateTime @default(now())

  @@unique([userId, period]) // Prevent double booking per period
}
